@model Tranport_management_system.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-info">New Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustName" class="control-label"> Customer Name</label>
                <input asp-for="CustName" class="form-control" />
                <span asp-validation-for="CustName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustAge" class="control-label">Customer Age</label>
                <input asp-for="CustAge" class="form-control" />
                <span asp-validation-for="CustAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustGender" class="control-label">Customer Gender</label>
                <input asp-for="CustGender" class="form-control" />
                <span asp-validation-for="CustGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustSeatNumber" class="control-label">Customer Seat number</label>
                <input asp-for="CustSeatNumber" class="form-control" />
                <span asp-validation-for="CustSeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustContactNumber" class="control-label">Customer Contact Details</label>
                <input asp-for="CustContactNumber" class="form-control" />
                <span asp-validation-for="CustContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustDepature" class="control-label">Depature from</label>
                <input asp-for="CustDepature" class="form-control" />
                <span asp-validation-for="CustDepature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustArrivingTo" class="control-label">Arrival at</label>
                <input asp-for="CustArrivingTo" class="form-control" />
                <span asp-validation-for="CustArrivingTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
