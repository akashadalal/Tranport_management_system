@model Tranport_management_system.Models.Register

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-black"> Register Agency </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminUsername" class="control-label m-1">Username</label>
                <input asp-for="AdminUsername" class="form-control" />
                <span asp-validation-for="AdminUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminName" class="control-label m-1">Full Name</label>
                <input asp-for="AdminName" class="form-control" />
                <span asp-validation-for="AdminName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminPassword" class="control-label m-1">Password</label>
                <input asp-for="AdminPassword" class="form-control" />
                <span asp-validation-for="AdminPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminEmail" class="control-label m-1">Email</label>
                <input asp-for="AdminEmail" class="form-control" />
                <span asp-validation-for="AdminEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminContactNumber" class="control-label m-1">Mobile Number</label>
                <input asp-for="AdminContactNumber" class="form-control" />
                <span asp-validation-for="AdminContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminAgencyName" class="control-label m-1">Agency Name</label>
                <input asp-for="AdminAgencyName" class="form-control" />
                <span asp-validation-for="AdminAgencyName" class="text-danger"></span>
            </div>
            <div class="form-group">

                <a asp-controller="Home" asp-action="Index"><input type="submit" value="Register User" class="btn btn-primary m-3" /> </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Login</a>
                
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
