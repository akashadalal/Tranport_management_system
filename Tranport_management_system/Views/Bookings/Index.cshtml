@model IEnumerable<Tranport_management_system.Models.Booking>

@{
    ViewData["Title"] = "Index";
}
<h2 class="text-black text-decoration-underline">Customer details</h2>
<p>
    <a asp-action="Create"> <input type="submit" value="Create New User" class="btn btn-secondary m-1" /></a>
</p>
<table class="table table-striped border">
    <thead>
        <tr class="table-info">
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
               Gender
            </th>
            <th>
               Seat Number
            </th>
            <th>
               Contact Number
            </th>
            <th>
                Depature from
            </th>
            <th>
                ArrivingTo
            </th>
            <th>
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustGender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustSeatNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustDepature)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustArrivingTo)
                </td>
                <td>
                    
                    <a asp-action="Details" asp-route-id="@item.Id"><input type="submit" value="Details" class="btn btn-secondary" /></a>

                </td>
            </tr>
        }
    </tbody>
</table>
